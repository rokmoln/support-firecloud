#!/usr/bin/env bash
set -euo pipefail

SUPPORT_FIRECLOUD_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)"
source ${SUPPORT_FIRECLOUD_DIR}/sh/common.inc.sh

if [[ "${EUID}" != "0" ]]; then
    # Restart this shell script as root.
    ${SUDO} ${BASH_SOURCE[0]}
    exit 0
fi

function apt_update() {
    apt-get update -y --fix-missing 2>&1 || {
        # try to handle "Hash Sum mismatch" error
        apt-get clean
        rm -rf /var/lib/apt/lists/*
        apt-get update -y --fix-missing
    }
}

function apt_install() {
    while read -u3 DPKG; do
        [[ -n "${DPKG}" ]] || continue

        echo_do "aptitude: Installing ${DPKG}..."
        apt-get install -y --force-yes "${DPKG}"
        echo_done
    done 3< <(echo "$@")
}

echo_do "aptitude: Updating..."
apt_install "software-properties-common"
apt-add-repository -y ppa:git-core/ppa
apt_update
echo_done

apt_install locales
locale-gen en_US en_US.UTF-8
dpkg-reconfigure --frontend=noninteractive locales

# improve date-time (ntp) sync
(
    # see https://bugs.launchpad.net/ubuntu/+source/tzdata/+bug/1773687
    ln -sf /usr/share/zoneinfo/UTC /etc/localtime
    apt_install tzdata
    dpkg-reconfigure --frontend=noninteractive tzdata

    timedatectl set-ntp no
    apt_install ntp
) || true

# Basic
echo_do "aptitude: Installing basic packages..."
DPKGS="$(cat <<-EOF
bash
bsdmainutils
build-essential
curl
file
git
rsync
uuid-runtime
EOF
)"
apt_install "${DPKGS}"
{
    RELEASE_ID="$(source /etc/os-release && echo ${ID})"
    RELEASE_VERSION_CODENAME="$(source /etc/os-release && echo ${VERSION_CODENAME})"
    case "${RELEASE_ID}-${RELEASE_VERSION_CODENAME}" in
        ubuntu-xenial | ubuntu-bionic)
            apt_install python-minimal
            ;;
        *)
            apt_install python3-minimal
            ;;
    esac
}
echo_done

echo_do "aptitude: Listing packages..."
apt list --installed
echo_done
